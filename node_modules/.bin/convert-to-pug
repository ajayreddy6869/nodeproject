#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../convert-to-pug/bin/convert-to-pug" "$@"
  ret=$?
else 
  node  "$basedir/../convert-to-pug/bin/convert-to-pug" "$@"
  ret=$?
fi
exit $ret
